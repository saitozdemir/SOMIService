@model UserDetailViewModel
<h3>User Details</h3>

<table class="table table-bordered" id="personel">
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
        <th>Created Date</th>
        <th>User Name</th>
        <th>User Role</th>
        <th>Edit</th>

    </tr>
    <tr>
        <td>@Model.Name</td>
        <td>@Model.Surname</td>
        <td>@Model.Email</td>
        <td>@Model.CreatedDate</td>
        <td>@Model.UserName</td>
        <td>@Model.RoleNames</td>
        <td>
            <a href="~/Admin/Manage/Update/@Model.Id" class="btn btn-success">Update</a>
            <a href="~/Admin/Manage/Delete/@Model.Id" class="btn btn-danger">Delete</a>
        </td>

    </tr>
</table>

<style>
        #personel {
        border-collapse: collapse;
        width: 100%;
        }

        #personel td, #personel th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #personel tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #personel th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #2c3e50;
            color: white;
        }
</style>
