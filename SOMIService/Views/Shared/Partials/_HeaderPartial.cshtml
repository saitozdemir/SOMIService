                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Blog">Blog</a>
                    </li>
                    @if (SignInManager.IsSignedIn(Context.User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Profile">Profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-danger" asp-controller="Customer" asp-action="AddFailureLogging">Arıza Kayıt</a>
                        </li>
                    }

                    <li class="nav-item">
                        @if (SignInManager.IsSignedIn(Context.User))
                        {
                            <a class="btn btn-primary ml-lg-2" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>

                        }
                        else
                        { <a class="btn btn-success ml-lg-2" asp-controller="Account" asp-action="Login">Giriş Yap</a>

                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

