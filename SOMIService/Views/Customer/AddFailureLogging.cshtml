@model CustomerFailureViewModel

@{ ViewBag.Title = "Arıza Kaydı Oluştur"; }
<!--====== Page Title start ======-->
<!--====== Page Title End ======-->
<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
    <div class="container">
        <form asp-controller="Customer" asp-action="AddFailureLogging" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="title">Arıza Kayıt Formu</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Kullanıcı Adı</label>
                                <input name="@ViewBag.UserName" value="@ViewBag.UserName" disabled="disabled" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input name="@ViewBag.Email" value="@ViewBag.Email" disabled="disabled" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PhoneNumber"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="payment-box mt-30">
                                <input type="submit" class="btn btn-primary ml-lg-2" value="Arıza Kaydı Oluştur" />
                                <a class="btn btn-primary ml-lg-2" asp-controller="Customer" asp-action="GetFailureLoggingByUserId">Arıza Kayıtları</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</section>
<!--====== Shoping Checkout End ======-->
@section Styles
{
    <style>
        input {
            border: solid 1px #e3eeff;
            height: 50px;
            padding: 0 15px;
        }
    </style>
}



