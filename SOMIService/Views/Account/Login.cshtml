@model LoginViewModel

@{ ViewBag.Title = "Giriş Yap"; }
<!--====== Page Title start ======-->
<!--====== Page Title End ======-->
<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
    <div class="container">
        <div class="user-actions mb-40">

            <p>
                Hesabınız yoksa<a asp-controller="Account" asp-action="Register">
                    Hesap açmak için tıklayınız
                </a>
            </p>
        </div>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="title">Giriş Formu</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="payment-box mt-30">
                                <input type="submit" class="main-btn btn-success" value="Giriş Yap" />

                                <a asp-action="ResetPassword" asp-controller="Account" class="text-dark"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Şifremi unuttum</a>
                            </div>
                        </div>
                        @*<div class="col-lg-4">
                            <div class="payment-box mt-30">
                                <a asp-action="ResetPassword" asp-controller="Account" class="text-dark">Şifremi unuttum</a>
                            </div>
                        </div>*@
                    </div>
                    <br />


                </div>
            </div>
        </form>
        <div class="text-danger">
            @ViewBag.Message
        </div>      
    </div>
</section>

<!--====== Shoping Checkout End ======-->
@section Styles
{
    <style>
        input {
            border: solid 1px #e3eeff;
            height: 50px;
            padding: 0 15px;
        }
    </style>
}

