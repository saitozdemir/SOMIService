@model ResetPasswordViewModel

@{ ViewBag.Title = "Şifremi Unuttum"; }

<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
    <div class="container">
        <div class="user-actions mb-40">
            <div class="text-info">@TempData["Message"]</div>
            <div asp-validation-summary="All" class="text-danger"></div>@*hata mesajları için asp-validation summary kullanıyoruz*@
        </div>
        <form asp-controller="Account" asp-action="ResetPassword" method="post">
            <input type="hidden" value="@ViewBag.UserId" id="UserId" name="UserId" />
            <input type="hidden" value="@ViewBag.code" id="code" name="code" />
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="title">Şifremi Unuttum</h3>
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NewPassword"></label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ConfirmNewPassword"></label>
                                <input asp-for="ConfirmNewPassword" class="form-control">
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="payment-box mt-30">
                                <input type="submit" class="main-btn" value="Şifremi Unuttum" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</section>
<!--====== Shoping Checkout End ======-->
@section Styles
{
    <style>
        input {
            border: solid 1px #e3eeff;
            height: 50px;
            padding: 0 15px;
        }
    </style>
}

